<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.ReviewActivity">x

    <TextView
        android:id="@+id/review_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center_horizontal"
        android:text="Add Review"
        android:textSize="30dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_txt"
        android:padding="20dp">


        <TextView
            android:id="@+id/review_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Yash Sandip Aher"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/review_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/review_username"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Reviews are public and include your account and device info. it also help to recommended the best food mess"
            android:textColor="@color/dark_grey"
            android:textSize="16dp" />


        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/rating_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/review_info"
            android:layout_marginTop="30dp" />


        <EditText
            android:id="@+id/descibe_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_bar"
            android:layout_marginTop="40dp"
            android:background="@drawable/editext_drawable"
            android:fontFamily="@font/poppins_medium"
            android:gravity="top"
            android:hint="Describe your experience"
            android:inputType="text|textMultiLine"
            android:padding="20dp" />


    </RelativeLayout>


    <Button
        android:id="@+id/btn_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_drawable"
        android:fontFamily="@font/poppins_semibold"
        android:text="POST"
        android:textColor="@color/white"
        android:textSize="17dp" />


</RelativeLayout>