                    android:elevation="4dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Vegan"
                    android:textColor="@drawable/text_color" />

                <RadioButton
                    android:id="@+id/rbVeg"
                    android:layout_width="100dp"
